@model ClasificacionPeliculasModel.Moviescategory

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>
<hr />
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <form asp-action="Edit">
                    <div class="card-header">@ViewData["Title"]</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 col-lg-6 col-sm-12">
                                Título de la película
                                <select asp-for="MovieId" 
                                asp-items="@Model.Movies" 
                                onchange="MovieChanged()" 
                                class="form-control"></select>
                                <span asp-validation-for="MovieId" class="text-danger"></span>
                                <br />
                            </div>
                           
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Movie.ReleaseDate)
                                </dt>
                                <dd class="col-sm-10">
                                    <input asp-for="Movie.ReleaseDate" class="form-control" readonly>
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Movie.Duration)
                                </dt>
                                <dd class="col-sm-10">
                                    <input asp-for="Movie.Duration" class="form-control" readonly>
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Movie.Director)
                                </dt>
                                <dd class="col-sm-10">
                                    <input asp-for="Movie.Director" class="form-control" readonly>
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Movie.Actors)
                                </dt>
                                <dd class="col-sm-10">
                                    <input asp-for="Movie.Actors" class="form-control" readonly>
                                </dd>
                            </dl>
                            <div class="col-md-6 col-lg-6 col-sm-12">
                                Categoría
                                <select asp-for="CategoryId" class="form-control" value="@Model.CategoryName" asp-items="@Model.Categories"></select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/moviescategories.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
